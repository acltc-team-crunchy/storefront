    <%= link_to "Price Lowest to Highest", "/products?sort=price&sort_order=asc" %>
    <%= link_to "Price Highest to Lowest", "/products?sort=price&sort_order=desc" %>
    <%= link_to "Show Products Less than $100", "/products?discount=true" %>
    <%= link_to "Random Product", "/products/random" %>

    <%= form_tag "/search", method: :post do %>
      <%= label_tag :user_search, "Search" %>
      <%= text_field_tag :user_search %>
      <%= submit_tag "Search" %>
    <% end %>


    <section>


      <div class="row">

      <!--Make magic happen here Ruby!-->
      <% @products.each do |product| %>

        <div class="col-sm-4">
          <div class="taco_single">
            <h2><%= product.name %></h2>
            <p>Price: <%= product.price %></p>
            <a href="/products/<%= product.id %>" title="View product"><img src="<%= product.images.first.image_url if product.images.any? %>" alt="<%= product.name %>" class="img-responsive taco_single_image"></a>
            <p>Description: <%= product.description %></p>
            <p>Rating: <span class="rating"><%= product.rating %></span></p>
          </div>
        </div>
      <% end %>
      <!--Magic ends-->

      </div>
    </section>
    <%= link_to "Add New Recipe", "products/new" %>
